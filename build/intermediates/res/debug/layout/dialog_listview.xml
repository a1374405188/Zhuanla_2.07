<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:padding="16dp"
        android:text="标题"
        android:textColor="@color/ziti2"
        android:textSize="18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mxx_item_theme_color" />

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:cacheColorHint="#0000"
        android:dividerHeight="0.5dp"
        android:divider="@color/line3"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <View
        android:id="@+id/dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line4" />

    <TextView
        android:id="@+id/dialog_cancle_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/mxx_view_bg_default3"
        android:gravity="center"
        android:textColor="@color/ziti2"
        android:textSize="16dp" />

</LinearLayout><!-- From: file:/D:/work/Zhuanla_1.0.7/res/layout/dialog_listview.xml -->