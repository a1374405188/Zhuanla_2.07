                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计投资" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textview_totalInvestment"
                    style="@style/custom_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textview_totalIncome"
                    style="@style/custom_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:background="@color/lightgray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资人数" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textview_totalInvestors"
                    style="@style/custom_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_projects"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资项目" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textview_totalProjects"
                    style="@style/custom_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_small_margin"
                    android:background="@drawable/ic_arrow"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_riskcontrol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:background="@color/lightgray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全保障" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow"
                    android:contentDescription="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

