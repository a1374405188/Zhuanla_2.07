                            custom:progress_reached_bar_height="4dip"
                            custom:progress_reached_color="@color/ziti5"
                            custom:progress_text_visibility="invisible"
                            custom:progress_unreached_bar_height="6dip"
                            custom:progress_unreached_color="@color/transparent" />
                    </LinearLayout>
