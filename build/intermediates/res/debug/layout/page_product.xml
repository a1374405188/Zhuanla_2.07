                    android:layout_height="wrap_content"
                    android:textColor="@color/red2"
                    android:textSize="90sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/percent"
                    android:textColor="@color/red2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
