<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip" >

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="37dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear_phone_enlarge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_enlarge_height"
                android:background="@color/red5"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textview_phone_enlarge"
                    style="@style/custom_textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/error_info"/>
        <!--      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_button_height"
                android:layout_marginTop="@dimen/activity_button_topmargin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <Button
                    android:id="@+id/button_login"
                    style="@style/custom_button"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/activity_button_height"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/next" />
            </LinearLayout>
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <CheckBox
                    android:id="@+id/checkbox_agreement"
                    style="@style/custom_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:checked="true" />

                <TextView
                    style="@style/custom_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/agree_read" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textview_agreement"
                        style="@style/custom_textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        
                        />

               <!--    <TextView
                        android:id="@+id/textview_agreement2"
                        style="@style/custom_textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                        -->   
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_top_panel"
                android:background="@color/gray"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/custom_textview10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/input_register_app" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_divide_height"
                android:background="@color/line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    style="@style/custom_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_textview_margin"
                    android:text="@string/mobile" />

                <com.beikbank.android.widget.ClearableEditText
                    android:id="@+id/clearedittext_phonenumber"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/input_mobile"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/ziti6"
                    android:textColorHint="@color/ziti7"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_divide_height"
                android:background="@color/line2" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_toast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toast_height"
        android:layout_marginTop="-22dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_toast"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textview_toast"
            style="@style/custom_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divide_height"
            android:background="@color/line2" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/work/Zhuanla_1.0.7/res/layout/activity_login_register.xml -->