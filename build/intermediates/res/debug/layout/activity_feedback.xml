<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_divide_height"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_item_height"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dip"
            android:paddingRight="16dip" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="@dimen/activity_small_margin"
                android:gravity="center_vertical"
                android:textColor="@color/ziti5"
                android:textSize="17sp"
                android:text="@string/contact_way" />

            <com.beikbank.android.widget.ClearableEditText
                android:id="@+id/clearedittext_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/input_contact_way"
                android:layout_marginLeft="@dimen/activity_textview_margin"
                android:inputType="phone"
                android:textColor="@color/ziti5"
                android:textColorHint="@color/ziti7"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" >

            <EditText
                android:id="@+id/edittext_feedbackcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/feedback_hint"
                android:lines="7"
                android:textColor="@color/ziti5"
                android:textColorHint="@color/ziti7"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview_feedback_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/feedback_left"
                    android:textColor="@color/ziti5"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/error_info"/>
    <!-- 
    <Button
        android:id="@+id/button_submit"
        style="@style/custom_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_button_topmargin"
        android:enabled="false"
        android:text="@string/submit" />
 -->
    <LinearLayout
        android:id="@+id/linear_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="23dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_telphone2"
            android:drawablePadding="@dimen/activity_small_margin"
            android:gravity="center_vertical"
            android:textColor="@color/ziti6"
            android:textSize="13sp"
            android:text="400-800-5818" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:text="@string/feedback_time"
            android:textColor="@color/ziti7"
            android:textSize="13sp" />
    </LinearLayout>

