<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/ziti5"
            android:textSize="17sp"
            android:textStyle="normal" />

        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line4" />

    <LinearLayout
        android:id="@+id/dialog_confirm_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/mxx_view_bg_default"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/ziti5"
            android:textSize="17sp" />

        <View
            android:id="@+id/dialog_btns_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line4" />

        <TextView
            android:id="@+id/dialog_confirm_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/mxx_view_bg_default2"
            android:gravity="center"
            android:text="@string/ok2"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/work/Zhuanla_1.0.7/res/layout/dialog_simple_layout.xml -->