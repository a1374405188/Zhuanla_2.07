<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >
  <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
        
        >
     <LinearLayout
         android:id="@+id/ll_gonggao"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         
         
         >
         <include layout="@layout/notice"/>
         
     </LinearLayout>
    <com.beikbank.android.widget2.SlideShowView
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/img_no_banner"
        
        
        />    
   
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
       
       >
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精品推荐"
        android:textColor="#ff333333"
        android:textSize="17sp"
        />
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
   </LinearLayout>   
   
      
      <LinearLayout
           android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
          >
    
          
          <LinearLayout
           android:layout_width="0px"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
          >
    
           <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称"
        android:textColor="#fb5a5c"
        android:textSize="12sp"
        />
          
           <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预期年化"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
          
          
          
        </LinearLayout>
          
          
          
            <LinearLayout
           
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_width="0px"
           android:layout_weight="1"
           android:gravity="center"
          >
    
           <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称"
        android:textColor="#fb5a5c"
        android:textSize="12sp"
        />
          
           <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预期年化"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
          
          
          
        </LinearLayout>
        
            
              <LinearLayout
          android:layout_width="0px"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="right"
          >
    
           <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称"
        android:textColor="#fb5a5c"
        android:textSize="12sp"
        />
          
           <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预期年化"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
          
          
          
        </LinearLayout>
          
      </LinearLayout>
      
  <!--  分割线-->    
      
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="32dp"
           android:paddingRight="32dp"
          >
          
          <View
               android:layout_width="wrap_content"
               android:layout_height="1px"
               android:background="#ffe6e6e6"
               
              />
          
      </LinearLayout>
      
      
      
  <!--  立即购买-->    
      
      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          >
          <TextView
              
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="剩余可够0元"
              />
          <Button
              
               android:layout_width="120dp"
               android:layout_height="96dp"
               android:text="购买"
              />
          
      </LinearLayout>
      
      
      
      <!--活动中心-->        
         <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             
             >
             
             <LinearLayout
              android:id="@+id/ll_huodong"   
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
             >
             <ImageView
               android:id="@+id/iv_huodong"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/pageview_img1"
                 />
                <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
             
                   <TextView
               android:id="@+id/tv_huodong"
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="活动中心"
            
             android:textColor="#ff323232"
             android:textSize="13sp"/>
              
               <TextView
               android:id="@+id/tv_huodong_text"     
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="精彩活动进行中"
            
             android:textColor="#ffb0b0b0"
             android:textSize="13sp"/>
               </LinearLayout>
              
             
            </LinearLayout>
              
             
           <View
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#ffd7d7d7"
             
               />
             
         
         
         
         
           <LinearLayout
               
              android:id="@+id/ll_yaoqin"  
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              
             >
             <ImageView
               android:id="@+id/iv_yaoqiu"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/pageview_img2"
                 />
                <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
             
                   <TextView
              android:id="@+id/tv_yaoqing"         
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="邀请好友"
            
             android:textColor="#ff323232"
             android:textSize="13sp"/>
              
               <TextView
              android:id="@+id/tv_yaoqing_text"
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="奖励30元红包"
            
             android:textColor="#ffb0b0b0"
             android:textSize="13sp"/>
               </LinearLayout>
              
             
            </LinearLayout>
              
              </LinearLayout>
         
           <View
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="#ffd7d7d7"
             
               />
           
       <!--安全保障-->        
         <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             
             >
             
             <LinearLayout
               android:id="@+id/ll_anquan"  
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
             >
             <ImageView
                 android:id="@+id/iv_anquan"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/pageview_img3"
                 />
                <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
             
                   <TextView
              android:id="@+id/tv_anquan"         
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="安全保障"
            
             android:textColor="#ff323232"
             android:textSize="13sp"/>
              
               <TextView
              android:id="@+id/tv_anquan_text"     
                   
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="多维度保障资金安全"
            
             android:textColor="#ffb0b0b0"
             android:textSize="13sp"/>
               </LinearLayout>
              
             
            </LinearLayout>
              
             
             
             
           <View
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#ffd7d7d7"
             
               />
             
         
         
         
         
           <LinearLayout
              android:id="@+id/ll_gengduo"
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
             >
             <ImageView
                 
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/pageview_img4"
                 />
                <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
             
                   <TextView
               android:id="@+id/tv_gengduo"        
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="更多"
            
             android:textColor="#ff323232"
             android:textSize="13sp"/>
              
               <TextView
              android:id="@+id/tv_gengduo_text"     
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="帮助中心，关于我们"
            
             android:textColor="#ffb0b0b0"
             android:textSize="13sp"/>
               </LinearLayout>
              
             
            </LinearLayout>
              
              </LinearLayout>     
   </LinearLayout>
 
</LinearLayout>
