<?xml version="1.0" encoding="utf-8"?>
<com.beikbank.android.scroller.ListItemDelete xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal" 
    android:background="#ffffffff"
    >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:orientation="horizontal" 
         >
    <LinearLayout 
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginRight="10dp"
         android:gravity="center"
        >
        <ImageView 
            android:id="@+id/iv_iv1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_un"
            />
        
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="17dp"
         android:layout_marginBottom="17dp"
         android:orientation="vertical"
         android:layout_marginRight="16dp"
        >
        <TextView 
           android:id="@+id/title"
           android:layout_width="match_parent"
           android:layout_height="0px"
           android:layout_weight="7"
           android:singleLine="true"
           android:text="title"
           android:textColor="#ff2d2d2d"
           android:textSize="17sp"
           android:gravity="center_vertical"
            />
         <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="0px"
           android:layout_weight="6"
           android:gravity="center_vertical"
          >
            <TextView 
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:singleLine="true"
           android:text="来自"
           android:textColor="#ff747474"
           android:textSize="13sp"
           android:layout_marginRight="10dp"
           android:gravity="center_vertical"
            android:visibility="gone"
            />
            <TextView 
           android:id="@+id/context"
           android:layout_width="0px"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:singleLine="true"
           android:text="titleertggggggggggggdddddddddddddd"
           android:textColor="#ff747474"
           android:textSize="13sp"
           android:layout_marginRight="10dp"
            android:gravity="center_vertical"
             android:visibility="gone"
            />
               <TextView 
           android:id="@+id/time"         
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:singleLine="true"
           android:text="2015-12-11 12:30"
           android:textColor="#ff0976aa"
           android:textSize="13sp"
            android:gravity="center_vertical"
            />
         </LinearLayout>
           
         </LinearLayout>
   
    </LinearLayout>
   <LinearLayout 
         android:id="@+id/ll_del"
         android:layout_width="88dp"
         android:layout_height="72dp"
         android:orientation="vertical"
         android:gravity="center"
         android:background="#ffdd2238"
         android:paddingTop="14dp"
         android:paddingBottom="14dp"
        >
       
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:src="@drawable/message_del"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:textColor="#ffffffff"
            android:textSize="13sp" 
            android:text="删除"
            android:gravity="center"
            />
     </LinearLayout>
 
</com.beikbank.android.scroller.ListItemDelete>