<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>
    <include layout="@layout/line_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:fadingEdge="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item1_space"
                />
            <!--收益率-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi2"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textColor="#ffdd2238"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dingqi3"
                    android:layout_marginLeft="@dimen/global_left_space"
                    android:background="@color/global_bg1"
                    >
                </View>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi3"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:textColor="#ffdd2238"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item1_space"
                />


            <!-- 资产安全-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi4"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/huoqi1"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi3"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dingqi3"
                    android:layout_marginLeft="@dimen/global_left_space"
                    android:background="@color/global_bg1"
                    >
                </View>
            </LinearLayout>
            <!-- 理财期限-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi6"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/huoqi2"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi3"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dingqi3"
                    android:layout_marginLeft="@dimen/global_left_space"
                    android:background="@color/global_bg1"
                    >
                </View>
            </LinearLayout>
            <!-- 起购金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi7"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1元"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi3"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dingqi3"
                    android:layout_marginLeft="@dimen/global_left_space"
                    android:background="@color/global_bg1"
                    >
                </View>
            </LinearLayout>
            <!-- 起息时间-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                  
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dingqi8"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dingqi8"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    android:visibility="invisible"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi3"
                        android:textSize="@dimen/dingqi30"
                        android:textColor="@color/dingqi3"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi4"
                        android:textSize="@dimen/dingqi31"
                        android:textColor="@color/dingqi2"
                        android:gravity="right"
                         android:visibility="invisible"
                        />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dingqi3"
                    android:layout_marginLeft="@dimen/global_left_space"
                    android:background="@color/global_bg1"
                    >
                </View>
            </LinearLayout>
            <!-- 返款时间-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/huoqi11"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dingqi10"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    android:visibility="invisible"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_tv7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi5"
                        android:textSize="@dimen/dingqi30"
                        android:textColor="@color/dingqi3"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi6"
                        android:textSize="@dimen/dingqi31"
                        android:textColor="@color/dingqi2"
                        android:gravity="right"
                        android:visibility="invisible"
                        />
                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item1_space"

                />
            <!-- 产品特性-->
            <RelativeLayout
                android:id="@+id/rl_rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dingqi15"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/home2_right_img"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_item1_space"

                />
            <!-- 分散债权-->
            <RelativeLayout
                android:id="@+id/rl_rl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dingqi1"
                android:paddingLeft="@dimen/global_left_space"
                android:paddingRight="@dimen/global_right_space"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分散债权"
                    android:textSize="@dimen/dingqi30"
                    android:textColor="@color/dingqi2"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/home2_right_img"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="28dp"
                />

        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/global_bg1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingqi4"
        android:background="#ffffff"
        android:gravity="center_vertical"
       
        >
       <Button
            android:id="@+id/bu_bu1"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="@dimen/global_button_height"
            android:text="@string/dingqi16"
            android:background="@drawable/button_select1"
            android:textColor="@drawable/button_color_select1"
            android:textSize="@dimen/global_button_text_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            />
        <Button
            android:id="@+id/bu_bu2"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="@dimen/global_button_height"
            android:text="@string/dingqi17"
            android:background="@drawable/btn_selector_button"
            android:textSize="@dimen/global_button_text_height"
            android:textColor="#ffffffff"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
</LinearLayout>

