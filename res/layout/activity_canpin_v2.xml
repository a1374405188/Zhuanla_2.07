<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >
    
  <View
       android:layout_width="match_parent"
       android:layout_height="0px"
       android:id="@+id/v"
      
      />
  <RelativeLayout
      
       android:layout_width="match_parent"
      android:layout_height="44dp"
    android:background="#fffb5a5c"
  
      
      >
   
     <LinearLayout
        android:id="@+id/linear_left"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:background="@drawable/btn_selector_back2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#ffffffff"
        android:textSize="18sp" 
        android:text="test"
        
        />
     <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        style="@style/custom_textview1"
        android:visibility="gone"
         android:gravity="center_vertical"
         android:layout_marginRight="16dp"
        />
      
   
   
   </RelativeLayout>

 
  
  
  
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffb5a5c"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
      >
      <LinearLayout
           android:layout_width="0px"
           android:layout_weight="3"
           android:layout_height="100dp"
           android:background="#fffb5a5c"
           android:orientation="vertical"
           android:gravity="center"
          >
          <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              
              >
          <TextView
              android:id="@+id/tv_nianfa"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="0"
               android:textColor="#ffffffff"
               android:textSize="35sp"
              />
            <TextView
             android:id="@+id/tv_jiaxi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="%"
               android:textColor="#ffffffff"
               android:textSize="20sp"
              />
          </LinearLayout>
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="预期年化收益率"
               android:textColor="#80ffffff"
               android:textSize="15sp"
              />
      </LinearLayout>
      
        <LinearLayout
            android:layout_width="0px"
           android:layout_weight="2"
           android:layout_height="wrap_content"
           android:background="#fffb5a5c"
           android:orientation="vertical"
           android:gravity="center"
          >
            <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              
              >
          <TextView
              android:id="@+id/tv_qixian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="0"
               android:textColor="#ffffffff"
               android:textSize="35sp"
              />
            <TextView
             android:id="@+id/tv_tian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="天"
               android:textColor="#ffffffff"
               android:textSize="20sp"
              />
          </LinearLayout>
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="投资期限"
               android:textColor="#80ffffff"
               android:textSize="15sp"
              />
      </LinearLayout>
      
  </LinearLayout>
  
  <!-- 头部 -->
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"      
         android:orientation="horizontal"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
    >
            <LinearLayout 
         android:id="@+id/ll_canpin"       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"      
         android:orientation="vertical"
       >
             <TextView
              android:id="@+id/tv_canpin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="产品特性"
               android:textColor="@color/bg_hong"
               android:textSize="16sp"
               android:layout_marginBottom="3dp"
              />
             <View
                 android:id="@+id/v_canpin"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                  
                  android:background="@color/bg_hong"
                 />
        </LinearLayout>
        
            
               <LinearLayout 
                    android:id="@+id/ll_xiangmu"  
                   android:layout_weight="1"
         android:layout_width="0px"
         android:layout_height="wrap_content"      
         android:orientation="vertical"
         android:gravity="center"
       >   
       <LinearLayout 
            
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"      
         android:orientation="vertical"
         android:gravity="center"
           
           >
             <TextView
              android:id="@+id/tv_xiangmu"   
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="项目信息"
               android:textColor="#ff333333"
               android:textSize="16sp"
               android:layout_marginBottom="3dp"
              />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:id="@+id/v_xiangmu"   
                
                 />
             
             </LinearLayout>
        </LinearLayout>
        
                  <LinearLayout 
                       android:id="@+id/ll_yigou"  
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"      
         android:orientation="vertical"
       >
             <TextView
              android:id="@+id/tv_yigou"   
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="已购用户"
              android:textColor="#ff333333"
               android:textSize="16sp"
               android:layout_marginBottom="3dp"
              />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:id="@+id/v_yigou"   
                
                 />
        </LinearLayout>
        
  </LinearLayout>
  <!-- 可滑动区域-->
  
       <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0px"
         android:layout_weight="1"
         android:orientation="vertical"
         
        
        >
       <com.beikbank.android.widget.MyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadeScrollbars="false"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none"
        android:fadingEdgeLength="0px"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
       
           >
       </com.beikbank.android.widget.MyViewPager>
         
        </LinearLayout>
  <!-- 计算器-->
     <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="@color/line2"
         />
      <LinearLayout
          android:gravity="center_vertical"
           android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        
        >
       <ImageView
           android:id="@+id/iv_jisuanqi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_canpin_xiangqing_v2"
           />
       
       <Button
          
           android:textColor="#ffffffff"
           android:layout_marginLeft="16dp"
              android:id="@+id/bu_goumai"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:textSize="13sp"
              android:background="@drawable/btn_selector_button3"
           
           />
      </LinearLayout>
</LinearLayout>