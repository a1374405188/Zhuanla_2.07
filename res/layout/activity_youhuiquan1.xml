<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical" >
    <include layout="@layout/title_bar" />
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffd6d6d6"
        />
     <ScrollView 
          android:layout_marginTop="16dp"
          android:id="@+id/sv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
           android:orientation="vertical"
          
         >
      <LinearLayout
         
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       
       android:orientation="vertical"
     >    
     
     <!--    <ListView 
           android:id="@+id/lv"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="none"
          android:fadingEdgeLength="0px"
          android:fadingEdge="none"
          android:fadeScrollbars="false"
               android:divider="@null"
        android:dividerHeight="12dp"
        android:cacheColorHint="#00000000"
           >
         
         </ListView>
         --> 
            <LinearLayout
       android:id="@+id/ll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       
       android:orientation="vertical"
     >  
     
                
       </LinearLayout>
         <LinearLayout 
              android:id="@+id/ll2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
             
             >
              <TextView 
              
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="没有更多可用红包了|"
               android:textColor="#ff747474"
               />
              <TextView 
               android:id="@+id/tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:text="历史红包>>"
               android:textColor="#ff22a7f0"
               />
         </LinearLayout>
           <LinearLayout 
              android:id="@+id/ll3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:visibility="gone"
             >
           <TextView 
              android:layout_marginTop="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="没有更多了"
               android:textColor="#ff747474"
               />
             </LinearLayout>
     </LinearLayout>
       </ScrollView>
     <RelativeLayout
       android:id="@+id/rl"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
     
        android:visibility="gone"
    
     >
       
       <LinearLayout
             android:layout_marginBottom="60dp"
           android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
           
            >
             <TextView 
          
         
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:text="没有更多可用的优惠券了"
             android:textColor="#ffbdbdbd"
           
           />
             <View
                 
                 android:layout_width="1dp"
                 android:layout_height="16dp"
                 android:background="#ffbdbdbd"
                 android:layout_marginLeft="1dp"
                 android:layout_marginRight="1dp"
                 />
       <TextView 
           android:id="@+id/tv1"
         
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:text="查看历史优惠券"
             android:textColor="#ff22a7f0"
           
           />
       </LinearLayout>
     </RelativeLayout>
</LinearLayout>
