<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divide_height"
            android:background="@color/line2" />
    </LinearLayout>


              <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="#fffb5a5c"
                 
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:paddingTop="32dp"
                  android:paddingBottom="32dp"
                  >
                  <TextView
                       android:id="@+id/tv_name" 
                      android:text="产品名称"
                      android:textSize="16sp"
                      android:textColor="#ffffffff"
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      
                      />
                  
                  
                   <LinearLayout
                       android:layout_marginTop="16dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                         
                         <LinearLayout
                   android:layout_width="0px"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                         
                       <TextView
                      android:text="预期年化收益率"
                      android:textSize="14sp"
                      android:textColor="#80ffffff"
                      
                        android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      />
                       <TextView
                       android:id="@+id/tv_shouyi"      
                      android:text="0.5%"
                      android:textSize="14sp"
                      android:textColor="#80ffffff"
                      
                        android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                      />
                       
                       
                       
                       
                   </LinearLayout>
                       <View
                           android:layout_width="1px"
                         android:layout_height="match_parent"
                         android:background="#80ffffff"
                       
                       />
                         
                         <LinearLayout
                             
                             
                   android:layout_marginLeft="8dp"
                   android:layout_width="0px"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                         
                       <TextView
                      android:text="投资期限"
                      android:textSize="14sp"
                      android:textColor="#80ffffff"
                        android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      
                      />
                       
                       <TextView
                          android:id="@+id/tv_qixian" 
                            android:layout_marginLeft="8dp"
                      android:text="30天"
                      android:textSize="14sp"
                      android:textColor="#80ffffff"
                        android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      
                      />
                       
                       
                   </LinearLayout>
                       
                       
                   </LinearLayout>
                  
              </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_panel_margin"
                     />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_item_height"
                    android:background="@drawable/bg_more_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/custom_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                     <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bank"
                        style="@style/custom_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_single"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ziti5"
                        android:textSize="13sp" />
                </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_more_item"
        android:gravity="center"
        android:visibility="gone"
        >
       <TextView
           android:id="@+id/tv1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="钱包"
           style="@style/custom_textview1"
           android:gravity="center"
           />
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv2"
            android:text="0.00元"
            style="@style/custom_textview1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>
