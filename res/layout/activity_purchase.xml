            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_panel_margin"
                android:background="@color/white"
                android:orientation="vertical" >

              

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_item_height"
                    android:background="@drawable/bg_more_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin" >

                    <TextView
                        style="@style/custom_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/cost" />

                    <com.beikbank.android.widget.ClearableEditText
                        android:id="@+id/clearedittext_transaction_money"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_textview_margin"
                        android:layout_marginRight="@dimen/activity_textview_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/purchase_info_text3"
                        android:inputType="number"
                        android:textColor="@color/ziti6"
                        android:maxLength="9"
                        android:textColorHint="@color/ziti7"
                        android:textSize="17sp" />
                    
                    <TextView
                        style="@style/custom_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/rmb" />

                </LinearLayout>

               
            </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_ll1"
          android:layout_width="match_parent"
          android:layout_height="32dp"
          android:gravity="right|center_vertical"
          android:visibility="gone"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_marginRight="16dp"
              >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/global_text_size14"
                 android:textColor="@color/global_text2"
                 android:text="@string/maiorqv14"
                 />
              <TextView
                  android:id="@+id/tv_tv1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/global_text_size14"
                  android:textColor="@color/global_text4"
                  android:text="0.00元"
                  />
          </LinearLayout>
      </LinearLayout>


    <include layout="@layout/error_info"/>
</LinearLayout>