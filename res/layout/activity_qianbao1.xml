<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg1"
    >
    <include layout="@layout/title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="#ffffffff"
        android:orientation="vertical"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0px"
         android:layout_weight="3"
         android:gravity="center"
         >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/qianbao1"
               />
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:text="我的余额"
                    android:textColor="#ff000000"
                    android:gravity="center"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="3"
                android:text="¥ 00.0"
                android:textColor="#ff000000"
                android:textSize="@dimen/global_text_size25"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <Button
                android:id="@+id/bu1"
                android:layout_width="match_parent"
                android:background="@drawable/btn_selector_button"
                android:layout_height="@dimen/global_button_height"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:text="充值"
                android:textColor="#ffffffff"
                android:textSize="@dimen/global_text_size19"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <Button
                android:id="@+id/bu2"
                android:layout_width="match_parent"
                android:background="@drawable/btn_selector_button"
                android:layout_height="@dimen/global_button_height"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:text="提现"
                android:textColor="#ffffffff"
                android:textSize="@dimen/global_text_size19"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@id/tv3"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff576b95"
                android:textSize="20sp"
                android:text="钱包详情"

                />
        </LinearLayout>
     </LinearLayout>
</LinearLayout>
