<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>
    <include layout="@layout/line_layout"/>
    <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         
        >
        
        <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
            >
            
            
            
 
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:gravity="center"
         android:orientation="vertical"
         android:background="#ffffffff"
         
         >
        
        
        

   <ImageView
       android:id="@+id/iv"
       android:layout_margin="10dp"
       android:layout_width="90dp"
       android:layout_height="90dp"
       android:src="@drawable/img_jiaoyi_chuli"
       
       
       />
   <TextView
       android:id="@+id/tv1"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="处理中"
       android:textSize="20sp"
       android:textColor="#ff323232"
       android:layout_marginTop="10dp"
              />
   
   
   
   <TextView
       android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请稍后在交易记录中查看结果"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
              />
       </LinearLayout>
       
    <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="#ffd9d9d9"
        
        
        />
    
    <RelativeLayout
        android:background="#ffffffff"
         android:layout_width="match_parent"
         android:layout_height="40dp"
           android:paddingLeft="16dp"
       android:paddingRight="16dp"
        >
        
        <TextView
       android:id="@+id/tv2"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="交易类型"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
     
              />
        
        
         <TextView
       android:id="@+id/tv3"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="充值"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
              />
        </RelativeLayout>
    
    
    
     <RelativeLayout
         android:id="@+id/rl2"
         android:background="#ffffffff"
         android:layout_width="match_parent"
         android:layout_height="40dp"
            android:paddingLeft="16dp"
       android:paddingRight="16dp"
        >
        
        <TextView
       android:id="@+id/tv4"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="支付方式"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
     
              />
        
        
         <TextView
       android:id="@+id/tv5"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="银行卡"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
              />
        </RelativeLayout>
    
    
    
    <RelativeLayout
         android:background="#ffffffff"
         android:layout_width="match_parent"
         android:layout_height="40dp"
      android:paddingLeft="16dp"
       android:paddingRight="16dp"
        >
        
        <TextView
       android:id="@+id/tv6"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="金额"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
     
              />
        
        
         <TextView
       android:id="@+id/tv7"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0.00元"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
              />
        </RelativeLayout>
        
    
    
    
    <LinearLayout
         android:background="#ffffffff"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:minHeight="40dp"
         android:paddingLeft="16dp"
       android:paddingRight="16dp"
        >
        
        <TextView
       android:id="@+id/tv8"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="订单号"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
      android:gravity="center_vertical"
              />
        
        
         <TextView
       android:id="@+id/tv9"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:text="000000"
       android:textSize="14sp"
       android:textColor="#ff747474"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
       android:gravity="right|center_vertical"
              />
        </LinearLayout>
    
      <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="#ffd9d9d9"
        
        
        />
    
    <LinearLayout
        android:id="@+id/ll_xiugai"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:background="#ffffffff"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
        android:gravity="center"
        android:visibility="gone"
        >
        
        <LinearLayout
             android:layout_width="0px"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="vertical"
            >
            <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="到期后本金和收益将自动复投"
                  android:textSize="18sp"
                  android:textColor="#ff333333"
                  android:paddingTop="3dp"
                />
             <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="若需到期返款"
                  android:textSize="14sp"
                  android:layout_marginTop="5dp"
                  android:textColor="#ff707070"
                  android:paddingBottom="3dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/btn_selector_button3"
             android:text="修改"
             android:textColor="#ffffffff"
             android:paddingLeft="16dp"
             android:paddingRight="16dp"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             
            >
        </Button>
        
    </LinearLayout>
           </LinearLayout>
        
    </ScrollView>
</LinearLayout>
