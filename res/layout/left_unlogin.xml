<?xml version="1.0" encoding="utf-8"?>
    <!--注册登录-->
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:paddingLeft="@dimen/left_left_space"
           android:paddingRight="@dimen/left_right_space" 
             >

            <ImageView
                android:id="@+id/imageview_avarta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_textview_margin"
                android:background="@drawable/unlogin_user_img" />
   <!--手机号-->  
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                >
                
                <TextView
                android:id="@+id/textview_loginname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageview_avarta"
                android:layout_centerVertical="true"
                android:text="请登录/注册"
                android:textColor="@color/white"
                android:textSize="18sp" />
    <!--认证状态1-->             
                <LinearLayout
                    android:id="@+id/ll_ll1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:visibility="gone"
                     >
                    
                    
                <TextView
                android:id="@+id/textview_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/status3"
                android:textSize="10sp"
                
                />
                <ImageView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/left_left_space"
                     android:src="@drawable/home2_right_img"
                    />
                </LinearLayout>             
            </LinearLayout>
         </RelativeLayout>
         <View 
            android:layout_marginLeft="@dimen/left_left_space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff4d4142"
            />
</LinearLayout>