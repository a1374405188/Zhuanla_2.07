<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_right"
    android:gravity="right"
    android:visibility="invisible"
    android:paddingTop="50dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_weixinfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_weixin" />

    <ImageView
        android:id="@+id/imageview_weixinmoment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_weixinfriend" />

    <ImageView
        android:id="@+id/imageview_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_weibo" />

    <ImageView
        android:id="@+id/imageview_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_qq" />

    <ImageView
        android:id="@+id/imageview_qqzone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_qqzone" />

    <ImageView
        android:id="@+id/imageview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="-60dp"
        android:contentDescription="@null"
        android:background="@drawable/share_message"/>

</LinearLayout>