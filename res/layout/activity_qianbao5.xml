<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>
    <include layout="@layout/line_layout"/>
    <!-- 购买金额-->
    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan1"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:gravity="center_vertical"
        android:background="#ffdd2233"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="充值"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan1"
            android:gravity="left|center_vertical"
            android:layout_marginRight="3dp"
            android:lines="2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"

            >
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dingdan_ok"
                android:layout_marginRight="@dimen/dingdan3"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="充值成功"
                android:textSize="@dimen/dingdan32"
                android:textColor="@color/dingdan1"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
    <!--错误提示-->
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dingdan2"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_line_height"
            >
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/global_left_space"
                android:layout_height="match_parent"
                android:background="#ffb0b0b0"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dingdan5"
            android:paddingRight="@dimen/global_right_space"

            android:gravity="right|center_vertical"
            android:textSize="@dimen/dingdan33"
            android:textColor="#ffd6d6d6"
            />
    </LinearLayout>
    <!-- 购买金额-->
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan2"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:background="#fff9465b"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_suhu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="充值金额"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="100"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan1"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <!-- 交易银行卡-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan2"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:id="@+id/rl3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="交易账户"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="中国建设银行"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan3"

        />

    <!-- 订单号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan2"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:gravity="center_vertical"
        android:background="#ffffffff"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dingdan_huoqi4"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12345687"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_line_height"
        android:background="#ffffffff"
        >
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/global_left_space"
            android:layout_height="match_parent"
            android:background="@color/global_bg1"
            />

    </LinearLayout>
    <!-- 交易时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan2"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dingdan_huoqi5"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2014-14-12"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <!-- 交易时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dingdan2"
        android:paddingLeft="@dimen/global_left_space"
        android:paddingRight="@dimen/global_right_space"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="余额"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.00元"
            android:textSize="@dimen/dingdan32"
            android:textColor="@color/dingdan3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    !-- 温馨提示 -->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dingdan3"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_left_space"
            android:layout_marginRight="@dimen/global_right_space"
            android:drawableLeft="@drawable/ic_warmly_remind"
            android:drawablePadding="@dimen/activity_small_margin"
            android:gravity="bottom"
            android:text="@string/warmly_remind"
            android:textColor="@color/blue"
            android:textSize="13sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_warm_line"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_left_space"
            android:layout_marginRight="@dimen/global_right_space"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="@string/dingdan_huoqi17"
            android:textColor="@color/ziti5"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
