<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg3"
    android:orientation="vertical"
    >
    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        >
        <TextView
            
          android:id="@+id/tv_quanxuan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:text="全选"
           android:textColor="#fffb5a5c"
           android:textSize="16sp" 
            
            >
         </TextView>
         <View
              android:layout_width="0px"
              android:layout_weight="1"
              android:layout_height="3px"
             
             />
             <TextView
          android:id="@+id/titleTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:text="转让"
           android:textColor="@color/ziti1"
           android:textSize="16sp" 
            
            >
         </TextView>
               <View
              android:layout_width="0px"
              android:layout_weight="1"
              android:layout_height="3px"
             
             />   
        <ImageView
              android:id="@+id/iv"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:padding="3dp"
              android:src="@drawable/img_close_v2"
            />
    </LinearLayout>
    <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/line2"
        
        />
      
  <ListView
            android:id="@+id/lv"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:divider="@color/global_bg3"
            android:dividerHeight="8dp"
          
         
         
         />                     
   <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/line2"       
       />               
                  
   <LinearLayout
           android:layout_width="match_parent"
            android:layout_height="49dp"
           android:gravity="center_vertical"
       
       >
           <LinearLayout
           android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
       
       >
               <TextView
          android:id="@+id/tv_money1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:text="0.00"
           android:textColor="#ff333333"
           android:textSize="18sp" 
            
            />
                   <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:text="转让总额(元)"
           android:textColor="#ff999999"
           android:textSize="12sp" 
            
            />
       
       
       </LinearLayout>  
       
           
     
                          <Button
                              android:id="@+id/bu_ok"
           android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
         
           android:gravity="center"
           android:text="确认"
           android:textColor="#ffffffff"
           android:textSize="16sp" 
           android:enabled="false"
           android:background="@drawable/btn_selector_button4"
            
            />
       
       
       
  
       
       
   </LinearLayout>               
                  
                  
</LinearLayout>

