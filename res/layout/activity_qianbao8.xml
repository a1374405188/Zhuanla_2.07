<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg1"
    android:orientation="vertical"

    >
    <include layout="@layout/title_bar" />
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd6d6d6"
        />
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <LinearLayout
          android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
         >
        
   
        <LinearLayout
             android:background="#ffffffff"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_marginTop="8dp"
            >
            
              <ImageView
                  
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_wallet_gold"
                  />
            <TextView
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="钱包余额(元)"
                 android:textColor="#ff999999"
                android:textSize="14sp"
                 android:layout_marginTop="16dp"
                />
              <TextView
                  android:id="@+id/tv1"
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="0.00"
                 android:textColor="#fffb5a5c"
                android:textSize="40sp"
                 android:layout_marginTop="16dp"
                />
        </LinearLayout>
    
               <LinearLayout
             android:background="#ffffffff"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
            android:orientation="horizontal"
            
            >
                 <LinearLayout
             android:background="#ffffffff"
             android:layout_width="0px"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
            android:orientation="vertical"
             android:layout_marginBottom="5dp"
            >
                <TextView
                  
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="投资回款(元)"
                 android:textColor="#ff999999"
                android:textSize="14sp"
                
                />
                     <TextView
                  android:id="@+id/tv2" 
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="0.00"
                 android:textColor="#ff333333"
                android:textSize="20sp"
                 android:layout_marginTop="5dp"
                />
           </LinearLayout>
                   
                       <LinearLayout
                android:background="#ffffffff"
                  android:layout_width="0px"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
               android:orientation="vertical"
               android:layout_marginBottom="5dp"
            
            >
                   <TextView
                  
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="投资回款(元)"
                 android:textColor="#ff999999"
                android:textSize="14sp"
                
                />
                     <TextView
                  android:id="@+id/tv3"
                 android:layout_width="wrap_content"
                 
                android:layout_height="wrap_content"
                 android:text="0.00"
                 android:textColor="#ff333333"
                android:textSize="20sp"
                 android:layout_marginTop="5dp"
                />
                   
            </LinearLayout>
           
           </LinearLayout>
            <Button
                android:id="@+id/bu1"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector_button3"
                android:layout_height="@dimen/global_button_height"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:text="充值"
                android:textColor="#ffffffff"
                android:textSize="@dimen/global_text_size19"
                />
           
       

       <Button
                android:id="@+id/bu2"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector_button2"
                android:layout_height="@dimen/global_button_height"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:text="提现"
                android:textColor="#fffb5a5c"
                android:textSize="@dimen/global_text_size19"
                />



 </LinearLayout>
    </ScrollView>

</LinearLayout>