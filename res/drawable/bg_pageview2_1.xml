<?xml version="1.0" encoding="utf-8"?>






<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
   	<item android:state_pressed="true" android:color="@color/global_text1">
                 <shape xmlns:android="http://schemas.android.com/apk/res/android" >
       <!-- 圆角 -->
                    <corners
        android:radius="2dp"
            />
     <!-- 填充 -->
                     <solid
        android:color="#fff05639"/><!-- 填充的颜色 -->
    
    <!-- 描边 -->
    
              <stroke
        android:width="1dp"
        android:color="#ffe4393c"/>

                        </shape>
   	</item>
   	
   	
   	<item android:state_enabled="false" android:color="@color/global_text1">
                     <shape xmlns:android="http://schemas.android.com/apk/res/android" >
       <!-- 圆角 -->
                    <corners
                       android:radius="2dp"
            />
     <!-- 填充 -->
                     <solid
                       android:color="#ffffffff"/><!-- 填充的颜色 -->
    
    <!-- 描边 -->
    
              <stroke
        android:width="1dp"
        android:color="#ffe4393c"/>

                        </shape>
   	</item>
   	
   	
   	
   	</selector>